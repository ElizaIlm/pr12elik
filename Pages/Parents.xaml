<Page x:Class="pr12eliza.Pages.Parents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr12eliza.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1199" d:DesignWidth="800"
      Title="Подача заявления" Height="800" Width="900">

    <Grid Background="#F8F9FA">
        <Grid Margin="0,0,0,1123" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" Source="/Image/logo.png"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,1,0,0" VerticalAlignment="Top" FontSize="19" FontWeight="Bold"/>
            <Label Content="Пермского авиационного техникума им. А. Д. Швецова" HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid Margin="0,60,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <Label Content="Сведения о родителях (законных представителях):" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Label Content="Если родитель один, заполните данные на одного родителя"  Foreground="Red" FontSize="10" Margin="0,0,0,15"/>
                    <Label Content="Мать (или законный представитель):"  Margin="0,0,0,5"/>
                    <Label Content="Фамилия, имя, отчество (полностью)" Margin="0,0,0,5"/>
                    <TextBox Height="24" Margin="0,0,0,10"/>
                    <Label Content="Дата рождения:" Margin="0,0,0,5"/>
                    <TextBox Height="24" Margin="0,0,0,10"/>
                    <Label Content="Место работы:" Margin="0,0,0,5"/>
                    <TextBox Height="24" Margin="0,0,0,10"/>
                    <Label Content="Должность:" Margin="0,0,0,5"/>
                    <TextBox Height="24" Margin="0,0,0,10"/>
                    <Label Content="Место жительства:" Margin="0,0,0,5"/>
                    <TextBox Height="24" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Label Content="Домашний телефон:" Width="346"/>
                            <Label Content="(при наличии)"  Foreground="Red" FontSize="10" Width="346"/>
                            <TextBox Height="24" Width="341"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Label Content="Мобильный телефон:" Width="351"/>
                            <Label Content="(при наличии)"  Foreground="Red" FontSize="10" Width="349"/>
                            <TextBox Height="24" Width="348"/>
                        </StackPanel>
                    </Grid>
                    <CheckBox Content="Настоящим подтверждаю, что персональные данные на третье лицо" Margin="0,10,0,20"/>
                    <Label Content="Отец (или законный представитель):"  Margin="0,20,0,5"/>
                    <Label Content="Фамилия, имя, отчество (полностью)" Margin="0,0,0,5"/>
                    <TextBox Height="24" Margin="0,0,0,10"/>

                    <Label Content="Дата рождения:" Margin="0,0,0,5"/>
                    <TextBox Height="24" Margin="0,0,0,10"/>

                    <Label Content="Место работы:" Margin="0,0,0,5"/>
                    <TextBox Height="24" Margin="0,0,0,10"/>

                    <Label Content="Должность:" Margin="0,0,0,5"/>
                    <TextBox Height="24" Margin="0,0,0,10"/>

                    <Label Content="Место жительства:" Margin="0,0,0,5"/>
                    <TextBox Height="24" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Label Content="Домашний телефон:" Width="348"/>
                            <Label Content="(при наличии)" Foreground="Red" FontSize="10" Width="347"/>
                            <TextBox Height="24" Width="343"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Label Content="Мобильный телефон:" Width="350"/>
                            <Label Content="(при наличии)" Foreground="Red" FontSize="10" Width="349"/>
                            <TextBox Height="24" Width="343"/>
                        </StackPanel>
                    </Grid>
                    <CheckBox Content="Настоящим подтверждаю, что персональные данные на третье лицо" Margin="0,10,0,20"/>
                    <Button Content="Продолжить" HorizontalAlignment="Right" Margin="0,20,0,10" Width="150" Height="25"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
