            <TextBox Height="20" Margin="36,340,123,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
            <Button Content="Выбрать" HorizontalAlignment="Right" Margin="0,0,21,30" VerticalAlignment="Bottom" Width="97" Height="20"/>
            <ScrollViewer Margin="784,0,0,0"/>
