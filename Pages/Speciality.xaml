<Page x:Class="pr12eliza.Pages.Speciality"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr12eliza.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="750"
      Title="Speciality">
    <Grid Background="#F8F9FA">
        <Grid Margin="0,0,0,640" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" Source="/Image/logo.png"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,1,0,0" VerticalAlignment="Top" FontSize="19" FontWeight="Bold"/>
            <Label Content="Пермского авиационного техникума им. А. Д. Швецова" HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid Margin="0,60,0,0">
            <Label Content="Выберите один из вариантов:" HorizontalAlignment="Left" Margin="22,443,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
           
                <StackPanel Margin="10">
                    <Label Content="Специальность" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Label Content="Выберите специальность, на которой желаете учиться:" Margin="0,0,0,5"/>
                <Label Content="Можете выбрать несколько специальностей" Foreground="Red" FontSize="10"/>
                <WrapPanel Orientation="Vertical">
                        <CheckBox Content="12.02.01 Авиационные приборы и комплексы" Margin="5"/>
                        <CheckBox Content="15.02.09 Аддитивные технологии" Margin="5"/>
                        <CheckBox Content="09.02.07 Информационные системы и программирование (Программист)" Margin="5"/>
                        <CheckBox Content="09.02.07 Информационные системы и программирование (Разработчик веб и мультимедийных приложений)" Margin="5"/>
                        <CheckBox Content="09.02.01 Компьютерные системы и комплексы" Margin="5"/>
                        <CheckBox Content="22.02.03 Литейное производство черных и цветных металлов" Margin="5"/>
                        <CheckBox Content="15.02.10 Мехатроника и мобильная робототехника" Margin="5"/>
                        <CheckBox Content="09.02.02 Прикладная информатика (по отраслям)" Margin="5"/>
                        <CheckBox Content="24.02.02 Производство авиационных двигателей" Margin="5"/>
                        <CheckBox Content="12.02.03 Радиоэлектронные приборные устройства" Margin="5"/>
                        <CheckBox Content="15.02.08 Технология машиностроения" Margin="5"/>
                        <CheckBox Content="15.02.15 Технология металлообрабатывающего производства" Margin="5"/>
                        <CheckBox Content="27.02.07 Управление качеством продукции, процессов и услуг" Margin="5"/>
                    </WrapPanel>
                    <Label Content="Среднее профессиональное образование получаю:"/>
                    <StackPanel Margin="10,15,5,15">
                        <RadioButton Content="впервые" GroupName="EducationFirstTime" Margin="0,0,0,5"/>
                        <RadioButton Content="не впервые" GroupName="EducationFirstTime" Margin="0,0,0,5"/>
                    </StackPanel>
                    <CheckBox Content="С лицензией на право осуществления образовательной деятельности, свидетельством о государственной аккредитации "/>
                    <Label Content=" правилами приема и правилами внутреннего распорядка обучающихся в данном образовательном учреждении, с Уставом "/>
                    <Label Content="Тухникума ознакомлен(а)"/>
                <CheckBox Content="С датой представления оригиналов документов ознакомлен(а)"/>
                    <Button Content="Продолжить" HorizontalAlignment="Right" Margin="0,0,0,10" Width="150" Height="25"/>
                    
                </StackPanel>
          
        </Grid>
    </Grid>
</Page>
